                    <TextBlock FontSize="30" Margin="0,20,0,20" Text="Other Details"/>
                    <TextBlock FontSize="20" Text="Blood Group :" Margin="0,5,0,0"/>
                    <TextBlock FontSize="20" Text="Sex :" Margin="0,10,0,0"/>
